<?xml version='1.0' encoding='utf-8'?>
<widget id="com.project.cyb" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<preference name="Orientation" value="portrait" />
    <name>Check Your Bias</name>
    <description>
       	A political alignment app
    </description>
    <author email="aaronnech@gmail.com" href="http://cordova.io">
        Aaron Nech
    </author>

    <feature name="http://api.phonegap.com/1.0/network"/>

    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser" />
    </feature>

    <content src="index.html" />

    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*.firebaseio.com" />
    <allow-intent href="auth.firebase.com" />
</widget>
